{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "repository": {
      "type": "string"
    },
    "access": {
      "type": "string"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "tags": {
      "collection": "tags",
      "via": "projects",
      "dominant": true
    },
    "posts": {
      "type": "component",
      "repeatable": true,
      "component": "post-style.inter-post"
    }
  }
}
